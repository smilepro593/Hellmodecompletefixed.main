----------------------------
-- SPAWN LOGIC (DOOR >=10)
----------------------------
local Rep = game:GetService("ReplicatedStorage")
local plr = game.Players.LocalPlayer

local function getDoor()
	return Rep.GameData.LatestRoom.Value
end

local function runEntity(url)
	pcall(function()
		loadstring(game:HttpGet(url))()
	end)
end

task.spawn(function()
	while task.wait(math.random(20,35)) do
		if getDoor() < 10 then continue end

		local roll = math.random()
		if roll <= 0.001 then
			-- 0.1% spawn ALL
			for _,u in ipairs(ENTITIES) do
				task.spawn(runEntity, u)
			end

		elseif roll <= 0.03 then
			-- 3% spawn 2â€“3
			for i = 1, math.random(2,3) do
				task.spawn(runEntity, ENTITIES[math.random(#ENTITIES)])
			end

		else
			-- 100% spawn 1
			runEntity(ENTITIES[math.random(#ENTITIES)])
		end
	end
end)
