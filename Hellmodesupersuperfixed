----------------------------
-- DOORS CAPTION (FADE)
----------------------------
task.spawn(function()
	local caption = require(game.Players.LocalPlayer.PlayerGui.MainUI.Initiator.Main_Game)
	caption:caption("Hell mode script successfully loaded", true)
	task.wait(2)
	caption:caption("By Smile x Tuffmu", true)
	task.wait(2)
	caption:caption("Good luck!", true)
end)

----------------------------
-- RAINBOW TEXT (BOTTOM LEFT)
----------------------------
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "HellModeRainbow"

local label = Instance.new("TextLabel", gui)
label.Size = UDim2.new(0, 260, 0, 24)
label.Position = UDim2.new(0, 10, 1, -34)
label.BackgroundTransparency = 1
label.Text = "Hell Mode by Smile x Tuffmu!"
label.TextSize = 14
label.Font = Enum.Font.GothamBold
label.TextXAlignment = Left

local hue = 0
RunService.RenderStepped:Connect(function(dt)
	hue = (hue + dt * 0.15) % 1
	label.TextColor3 = Color3.fromHSV(hue, 1, 1)
end)

